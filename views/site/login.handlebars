    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">Login</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">

					{{#if sessionFlash.message}}
						<div class="{{sessionFlash.type}}">
							{{sessionFlash.message}}
						</div>
					{{/if}}

				<form action="/users/login" method="POST">
					<div class="row">
						<div class="offset-3 col-md-6">							
                            <div class="form-group text">
								<input class="form-control" name="email" type="email" placeholder="Email" required="required" data-validation-required-message="Please enter your email address.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="password" type="password" placeholder="Password" required="required" data-validation-required-message="Please enter your password.">
								<p class="help-block text-danger"></p>
							</div>
							<p class="text-right">Don't have a membership? You can <a href="/users/register">click here.</a></p>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="loginButton" class="main-btn" type="submit">Login</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>
